<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.As3arElYoum" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/toolbar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="drawerArrowStyle">@style/drawerToggle</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splashScreenBg</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/as3ar_elyoum</item>
        <item name="postSplashScreenTheme">@style/Theme.As3arElYoum</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>
</resources>