<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardBackgroundColor="@color/white">

   <LinearLayout
       android:layout_width="wrap_content"
       android:orientation="vertical"
       android:padding="@dimen/_6sdp"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/source_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="sans-serif-black"
           android:textColor="@color/source_color"
           android:textSize="@dimen/_7ssp"
           android:textStyle="bold"
           tools:text="أمازون" />

       <ImageView
           android:id="@+id/product_image"
           android:layout_width="@dimen/_70sdp"
           android:layout_height="@dimen/_70sdp"
           android:layout_gravity="center"
           android:contentDescription="@string/products"
           android:padding="@dimen/_6sdp"
           tools:src="@drawable/as3ar_elyoum" />

       <TextView
           android:id="@+id/name_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:maxLength="30"
           android:padding="@dimen/_2sdp"
           android:textColor="@color/black"
           android:textSize="@dimen/_6ssp"
           android:textStyle="bold"
           tools:text="معالج كور أي فايف سداسي النواة 12 ثريد" />

       <TextView
           android:id="@+id/price_tv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/green"
           android:textSize="@dimen/_6ssp"
           android:padding="@dimen/_1sdp"
           android:textStyle="bold"
           tools:text="7000.0 جنيه مصري" />

       <com.google.android.material.button.MaterialButton
           android:id="@+id/product_details_btn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/Widget.Material3.Button.OutlinedButton"
           android:layout_gravity="center"
           android:textColor="@color/black"
           android:textStyle="bold"
           app:strokeColor="@color/black"
           app:rippleColor="@color/common_google_signin_btn_text_light_focused"
           android:layout_marginTop="@dimen/_2sdp"
           android:text="@string/product_details_btn"
           android:textSize="@dimen/_6ssp" />

   </LinearLayout>
</androidx.cardview.widget.CardView>

