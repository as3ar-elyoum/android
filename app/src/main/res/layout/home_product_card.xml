<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/main_bg"
    app:cardCornerRadius="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp">

        <TextView
            android:id="@+id/source_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/source_color"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            tools:text="أمازون" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/products"
            android:padding="@dimen/_6sdp"
            tools:src="@drawable/as3ar_elyoum" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLength="35"
            android:maxLines="1"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            tools:text="معالج كور أي فايف سداسي النواة 12 ثريد" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/green"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            tools:text="7000.0 جنيه مصري" />

        <Button
            android:id="@+id/product_details_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/background_bg"
            android:layout_margin="@dimen/_4sdp"
            android:text="@string/product_details_btn"
            android:textColor="@color/black"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>