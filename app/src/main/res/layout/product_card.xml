<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_6sdp">

        <TextView
            android:id="@+id/source_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/source_color"
            android:textSize="@dimen/_7ssp"
            android:textStyle="bold"
            tools:text="أمازون" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/products"
            android:padding="@dimen/_6sdp"
            tools:src="@drawable/as3ar_elyoum" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="30"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_6ssp"
            android:textStyle="bold"
            tools:text="معالج كور أي فايف سداسي النواة 12 ثريد" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_1sdp"
            android:textColor="@color/green"
            android:textSize="@dimen/_6ssp"
            android:textStyle="bold"
            tools:text="7000.0 جنيه مصري" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/product_details_btn"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="@string/product_details_btn"
            android:textColor="@color/black"
            android:textSize="@dimen/_6ssp"
            android:textStyle="bold"
            app:rippleColor="@color/common_google_signin_btn_text_light_focused"
            app:strokeColor="@color/black" />

    </LinearLayout>
</androidx.cardview.widget.CardView>