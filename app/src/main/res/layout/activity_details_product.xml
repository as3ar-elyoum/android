<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recycler_selector"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/toolbar"
                    app:layout_scrollFlags="scroll|enterAlways">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/toolbarTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:padding="@dimen/_4sdp"
                        android:text="@string/product_details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                </com.google.android.material.appbar.MaterialToolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/product_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#192630"
            android:textSize="@dimen/_10ssp"
            android:padding="@dimen/_8sdp"
            android:layout_gravity="end"
            android:fontFamily="sans-serif-black"
            tools:text="من أمازون" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_margin="@dimen/_10sdp"
            tools:src="@mipmap/ic_launcher_round"
            android:contentDescription="@string/product_details" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            tools:text="Product Name" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="3"
           android:layout_margin="@dimen/_10sdp"
           android:orientation="horizontal">

           <Button
               android:id="@+id/product_btn"
               android:layout_width="0dp"
               android:layout_weight="1.5"
               android:layout_height="wrap_content"
               android:backgroundTint="#BA3E3E"
               android:layout_marginEnd="@dimen/_10sdp"
               android:textColor="#FFFFFF"
               android:textSize="@dimen/_10sdp"
               android:textStyle="bold"
               tools:text="إشتريه من أمازون" />

           <TextView
               android:id="@+id/price_tv"
               android:layout_width="0dp"
               android:layout_weight="1.5"
               android:layout_height="wrap_content"
               android:textColor="@color/price"
               android:textSize="@dimen/_10ssp"
               android:gravity="center"
               android:textStyle="bold"
               tools:text="90000 جنيه مصري" />

       </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/getTheGraph"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_margin="@dimen/_5sdp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:background="@color/mainBg"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_similar_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/similar_product_card" />

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</ScrollView>
